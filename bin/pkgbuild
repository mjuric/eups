#!/bin/bash
#
# Convenience launcher for ./ups/pkgbuild. If ./ups/pkgbuild does not exist,
# it will launch the default one from $EUPS_DIR/lib/eupspkg/pkgbuild.default
#

[[ -f ./ups/pkgbuild ]] && exec ./ups/pkgbuild "$@"

if [[ ! -d ./ups && $FORCE -ne 1 ]]; then
	echo "pkgbuild: no ./ups directory found (are you running from the root directory of your package?)."
	echo "pkgbuild: run \$EUPS_DIR/lib/eupspkg/pkgbuild.default directly if you know what you're doing."
	exit -1
fi

exec $EUPS_DIR/lib/eupspkg/pkgbuild.default "$@"
